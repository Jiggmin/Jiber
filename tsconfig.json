{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "target": "es2019",
        "lib": ["es2019"],
        "esModuleInterop": true
    },
    "include": [
        "packages/**/*.ts"
    ]
}
